<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDF5E6"
    android:padding="16dp"
    android:contentDescription="@string/main_menu_description">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_title"
        android:textSize="42sp"
        android:textColor="#FFFFFF"
        android:background="#D2691E"
        android:padding="12dp"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">
            <ImageView
                android:id="@+id/ny_pizza_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ny_pizza"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/ny_pizza_description"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ny_pizza_label"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/chicago_pizza_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/chicagopizza"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/chicago_pizza_description"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chicago_pizza_label"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">
            <ImageView
                android:id="@+id/notepad_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/store_orders"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/store_orders_description"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/store_orders_label"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/shopping_cart_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cart"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/cart_description"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart_label"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>