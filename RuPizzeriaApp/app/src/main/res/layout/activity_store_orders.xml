<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5EBE0"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_button"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/all_placed_orders_title"
            android:textSize="24sp"
            android:textColor="#8B4513"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@id/back_button"/>
    </RelativeLayout>

    <Spinner
        android:id="@+id/order_number_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/order_total_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_total_with_tax_label"
        android:textColor="#985E49"/>

    <EditText
        android:id="@+id/order_total_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:background="#FFFFFF"
        android:padding="8dp"/>

    <ListView
        android:id="@+id/order_details_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"/>

    <Button
        android:id="@+id/cancel_order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel_order_button"
        android:backgroundTint="#D4A373"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>
</LinearLayout>