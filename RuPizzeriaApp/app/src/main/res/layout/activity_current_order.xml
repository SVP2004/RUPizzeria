<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EBE0"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/back_button"
            android:backgroundTint="#985E49"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

        <Button
            android:id="@+id/place_order_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/place_order_button"
            android:backgroundTint="#90A955"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/cart_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cart_label"
        android:textSize="24sp"
        android:textColor="#8B4513"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/order_number_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_number_label"
        android:textColor="#985E49"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cart_title"/>

    <EditText
        android:id="@+id/order_number_display"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:paddingHorizontal="12dp"
        android:textSize="16sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:contentDescription="@string/order_number_description"
        app:layout_constraintTop_toBottomOf="@id/order_number_label"/>

    <ListView
        android:id="@+id/order_details_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:choiceMode="singleChoice"
        app:layout_constraintTop_toBottomOf="@id/order_number_display"
        app:layout_constraintBottom_toTopOf="@id/subtotal_container"/>

    <LinearLayout
        android:id="@+id/subtotal_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/sales_tax_container">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/subtotal_label"
            android:textColor="#985E49"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/subtotal_display"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingHorizontal="12dp"
            android:textSize="16sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:contentDescription="@string/subtotal_description"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sales_tax_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/total_container">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sales_tax_label"
            android:textColor="#985E49"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/sales_tax_display"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingHorizontal="12dp"
            android:textSize="16sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:contentDescription="@string/sales_tax_description"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/total_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/action_buttons">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/order_total_label"
            android:textColor="#985E49"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/order_total_display"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingHorizontal="12dp"
            android:textSize="16sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:contentDescription="@string/order_total_description"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp">
        <Button
            android:id="@+id/remove_pizza_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/remove_pizza_button"
            android:backgroundTint="#E76F51"
            android:textColor="@android:color/white"
            android:paddingVertical="12dp"/>

        <Button
            android:id="@+id/clear_order_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/clear_order_button"
            android:backgroundTint="#E76F51"
            android:textColor="@android:color/white"
            android:paddingVertical="12dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>